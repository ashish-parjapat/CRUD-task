            <input type="date" name="dateOfJoining" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="Reporting-Manager" class="text-light">Reporting Manager</label>
            <input type="text" name="reportingManager" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="salary" class="text-light">Salary</label>
            <input type="number" name="salary" value="" placeholder="">
